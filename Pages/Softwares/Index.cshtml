@page
@model RazorPagesSoftware.Pages.Softwares.IndexModel

@{
    ViewData["Title"] = "Softwares";
}

<h1>MIS Software Database</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form>
    <p>
        Software Name: <input type="text" asp-for="SearchString" />
        <select asp-for="SoftwarePublisher" asp-items="Model.Publishers">
            <option value="">Publisher/Developer List: ALL</option>
        </select>
        <select asp-for="SoftwareLocations" asp-items="Model.Locations">
            <option value="">Locations List: ALL</option>
        </select>
        <select asp-for="PurchaseOrder" asp-items="Model.PoNumbers">
            <option value="">PO#'s: ALL</option>
        </select>
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Software[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Software[0].Publisher)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Software[0].Vendor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Software[0].LicenseKey)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Software[0].PONumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Software[0].Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Software[0].LicenseQuantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Software[0].RenewalDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Software[0].IsInstructional)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Software[0].IsFacStaff)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Software[0].IsArchived)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Software) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Publisher)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vendor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LicenseKey)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PONumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LicenseQuantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RenewalDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsInstructional)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsFacStaff)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsArchived)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a><br>
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a><br>
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
